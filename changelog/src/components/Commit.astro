---
import { Repo, RepoCommitTree } from "../consts";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"time"> & {
    commit: String;
};

const { commit = "HEAD", ...attrs } = Astro.props;

---

<p>
    <a target="_blank" rel="noopener noreferer" href={`${RepoCommitTree}/${commit}`}>
        {commit?.substr(0, 7)}
    </a>
</p>

<style>
    p {
        display: inline-block;
        font-family: monospace;
        font-size: 12px;
        width: 100%;
        margin-top: 0.5em;
    }
    p a {
        color: #6a71a0;
        font-weight: bold;
    }
</style>
